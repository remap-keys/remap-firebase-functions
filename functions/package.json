{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "build": "yarn lint && tsc",
    "serve": "yarn build && firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "prepare-deploy": "yarn build && yarn test && firebase functions:config:set discord.webhook=$DISCORD_WEBHOOK notification.url=$NOTIFICATION_URL jwt.secret=$JWT_SECRET",
    "deploy": "yarn prepare-deploy && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "yarn jest"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/pubsub": "^4.0.6",
    "@google-cloud/tasks": "^4.0.1",
    "axios": "^0.21.1",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.4.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.1",
    "node-html-parser": "^6.1.13",
    "qs": "^6.11.2",
    "sitemap": "^7.0.0"
  },
  "devDependencies": {
    "@types/express-serve-static-core": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/moment": "^2.13.0",
    "@types/node": "^20.10.5",
    "@types/qs": "^6.9.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.1",
    "firebase-functions-test": "^0.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,css,scss,md,json,yaml}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "packageManager": "yarn@1.22.21+sha1.1959a18351b811cdeedbd484a8f86c3cc3bbaf72"
}
